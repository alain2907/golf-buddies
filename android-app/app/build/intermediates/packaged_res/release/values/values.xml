<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="black">#FF000000</color>
    <color name="golf_green">#2D5016</color>
    <color name="golf_green_dark">#1B5E20</color>
    <color name="golf_green_light">#4A7C2E</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Golf Buddies</string>
    <string name="asset_statements">[{
        \"relation\": [\"delegate_permission/common.handle_all_urls\"],
        \"target\": {
            \"namespace\": \"web\",
            \"site\": \"https://golf-buddies.vercel.app\"
        }
    }]</string>
    <style name="Theme.GolfBuddies" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/golf_green</item>
        <item name="colorPrimaryVariant">@color/golf_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/golf_green_light</item>
        <item name="colorSecondaryVariant">@color/golf_green</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
        
    </style>
    <style name="Theme.GolfBuddies.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>